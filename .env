# =============================================
# Basic Configuration
# =============================================
NODE_ENV=production
PORT=3000
SESSION_SECRET=production

# =============================================
# Railway Optimized Configuration
# =============================================
MAX_CONCURRENT_SESSIONS=2
MAX_TOTAL_SESSIONS=5
MEMORY_LIMIT=512
CPU_LIMIT=1

# =============================================
# Connection & Timeout Settings
# =============================================
SESSION_TIMEOUT=360000
DEFAULT_TIMEOUT=240000
MAX_TIMEOUT=600000
MAX_RETRIES=3
DNS_RETRY_DELAY=10000
RESOURCE_TIMEOUT=60000

# =============================================
# Auto-loop Settings
# =============================================
AUTO_LOOP=true
LOOP_INTERVAL=1800000
MAX_SESSIONS=2
CONCURRENT_DELAY=15000
DEFAULT_TARGET_URL=https://cryptoajah.blogspot.com

# =============================================
# Proxy & Browser Settings
# =============================================
USE_FREE_PROXY=true
ADAPTIVE_TIMEOUT=true

# Puppeteer Configuration
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# =============================================
# Performance Optimization
# =============================================
JSON_LIMIT=10mb
URL_LIMIT=10mb
