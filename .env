# =============================================
# Redis Configuration
# =============================================
# Set to 'false' to disable Redis completely and use MemoryStore
USE_REDIS=false

# Only set REDIS_URL if USE_REDIS=true and you have Redis available
# REDIS_URL=redis://localhost:6379

# =============================================
# Railway Optimized Configuration
# =============================================
NODE_ENV=production
PORT=3000
SESSION_SECRET=1Sampai100

# Resource Limits - Reduced for stability
MAX_CONCURRENT_SESSIONS=2
MAX_TOTAL_SESSIONS=5
MEMORY_LIMIT=512
CPU_LIMIT=1

# =============================================
# Connection & Timeout Settings
# =============================================
# Increased timeouts for slow websites
SESSION_TIMEOUT=180000
DEFAULT_TIMEOUT=120000
MAX_TIMEOUT=300000
MAX_RETRIES=3
DNS_RETRY_DELAY=5000
RESOURCE_TIMEOUT=30000

# =============================================
# Auto-loop Settings
# =============================================
AUTO_LOOP=true
LOOP_INTERVAL=1800000
MAX_SESSIONS=2
CONCURRENT_DELAY=15000
DEFAULT_TARGET_URL=https://cryptoajah.blogspot.com

# =============================================
# Proxy & Browser Settings
# =============================================
USE_FREE_PROXY=true
ADAPTIVE_TIMEOUT=true

# Puppeteer Configuration
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
